

  <div class="container" style="display:flex; flex-direction:column; align-items:center;">
    <div class="text-center mb-1">
      <h2 class=" mb-2 fw-bold text-primary" style="font-size: 2.4rem;">Fotobook Login</h2>
      <div class="rounded-1 border border-2 shadow-sm p-3 mx-auto" style="width: 395px; background-color: #fcfcfc;">
        <div class="d-flex justify-content-center gap-5">
          <button class="btn btn-light border social-btn" id="google-btn">
                <%= image_tag 'logoGoogle.svg.png', alt: 'LogoGoogle', width: 49, height: 49 %>
          </button>
          <button class="btn btn-light border social-btn" id="facebook-btn">
                              <%= image_tag 'iconFB.svg', alt: 'LogoFacebook', width: 49, height: 49 %>
          </button>
          <button class="btn btn-light border social-btn" id="twitter-btn">
                              <%= image_tag 'Logo_of_Twitter.svg.png', alt: 'LogoX', width: 38, height: 38 %>
          </button>
        </div>
      </div>
    </div>

    <div class="login-form border border-2 rounded-1 shadow-sm w-100 mx-auto" style="max-width: 395px; background-color: #fcfcfc;">
      <div class="text-center mb-4 mt-4">
                <%= image_tag 'logo_login.png', alt: 'Logo_login', width: 76, height: 76 %>
      </div>

      <!-- Devise Login Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control border border-1 shadow-sm", placeholder: "Email" %>
        </div>

        <!-- Password Field -->
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control border border-1 shadow-sm", placeholder: "Password" %>
        </div>

        <!-- Remember Me Checkbox -->
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>

        <!-- Submit Button -->
        <div class="mb-2 d-grid">
          <%= f.submit "Login", class: "btn btn-primary w-100" %>
        </div>

        <!-- Forgot Password Link -->
        <div class="mt-3 mb-2 text-center">
          <%= link_to "Forgot password?", new_user_password_path, class: "small" %>
        </div>
      <% end %>

    </div>

    <div class="create-account-link text-center mt-2">
      <%= link_to "Create an account", new_user_registration_path, class: "small" %>
    </div>
  </div>

