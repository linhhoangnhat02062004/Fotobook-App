<% content_for :title, @photo.title %>



<!-- Main Content -->
<div class="container mt-1">
  <div class="row justify-content-center">
    <div class="col-lg-11">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
          <!-- Photo Title -->
          <div class="text-center mb-1">
            <h2 class="fw-bold text-dark fs-5"><%= @photo.title %></h2>
          </div>
          
          <!-- Photo Display -->
          <div class="text-center mb-2">
            <% if @photo.image.present? %>
              <%= image_tag @photo.image.url, 
                  class: 'img-fluid rounded shadow', 
                  alt: @photo.title, 
                  style: 'max-height: 600px; width: 100%; object-fit: contain;' %>
            <% else %>
              <div class="border rounded p-2 text-center text-muted">
                <i class="fas fa-image fa-5x mb-3"></i>
                <p>No image available</p>
              </div>
            <% end %>
          </div>
          
          <!-- Photo Description -->
          <% if @photo.description.present? %>
            <div class="text-center">
              <p class="text-muted fs-6"><%= @photo.description %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
