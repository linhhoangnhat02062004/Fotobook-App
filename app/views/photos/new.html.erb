
  <!-- Modern New Photo Form -->
<div class="container-fluid py-3 mt-2">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <div class="card shadow-lg">
        <div class="card-header bg-gradient-primary text-white">
          <div class="d-flex align-items-center">
            
            <h4>
              <i class="fas fa-plus me-0" style = "color: white; font-weight: bold;"></i> <spam class = "fs-5" style = "color: white; font-weight: bold;">New Photo</span>
            </h4>
          </div>
        </div>
        
        <div class="card-body p-3">
          <%= form_with(model: @photo, local: true, class: 'needs-validation', novalidate: true, html: { multipart: true }) do |form| %>
            <% if @photo.errors.any? %>
              <div class="alert alert-danger border-0">
                <div class="d-flex align-items-center">
                  <i class="fas fa-exclamation-triangle me-3"></i>
                  <div>
                    <h6 class="mb-1">Please fix the following errors:</h6>
                    <ul class="mb-0">
                      <% @photo.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Image Upload Section -->
            <div class="upload-section mb-4">
              <label class="form-label fw-bold">
                <i class="fas fa-camera me-2 text-primary"></i>Photo
              </label>
              
              <div class="upload-area border-2 border-dashed rounded-3 p-5 text-center" id="uploadArea">
                <div class="upload-icon mb-3">
                  <i class="fas fa-cloud-upload-alt fa-3x text-muted"></i>
                </div>
                <h5 class="text-muted mb-2">Drag & Drop your photo here</h5>
                <p class="text-muted mb-4">or click to browse files</p>
                
                <input type="file" 
                       id="imageInput" 
                       name="photo[image]" 
                       accept="image/jpeg,image/png,image/gif"
                       class="d-none"
                       required>
                
                <button type="button" class="btn btn-primary btn-lg px-3" onclick="document.getElementById('imageInput').click()">
                  <i class="fas fa-folder-open me-2"></i><span>Choose Photo</span>
                </button>
                
                <div class="mt-3">
                  <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Accepted formats: JPEG, PNG, GIF | Max size: 5MB
                  </small>
                </div>
              </div>

              <!-- Image Preview -->
              <div id="imagePreview" class="mt-3" style="display: none;">
                <div class="preview-container position-relative">
                  <img id="previewImage" class="img-fluid rounded-3" style="max-height: 400px; width: 100%; object-fit: cover;">
                  <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2" onclick="removeImage()">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
            </div>

            <!-- Form Fields -->
            <div class="row">
              <div class="col-md-8">
                <div class="mb-4">
                  <%= form.label :title, class: 'form-label fw-bold' %>
                  <%= form.text_field :title, 
                      class: 'form-control form-control-lg', 
                      placeholder: 'Give your photo a meaningful title...', 
                      maxlength: 140, 
                      required: true %>
                  <div class="form-text">
                    <i class="fas fa-info-circle me-1"></i>
                    Maximum 140 characters
                  </div>
                </div>
              </div>
              
              <div class="col-md-5">
                <div class="mb-4">
                  <%= form.label :sharing_mode, class: 'form-label fw-bold' %>
                  <%= form.select :sharing_mode, 
                      options_for_select([
                        ['Public', 'public'], 
                        ['Private', 'private']
                      ]), 
                      {}, 
                      class: 'form-select form-select-lg', 
                      required: true %>
                </div>
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :description, class: 'form-label fw-bold' %>
              <%= form.text_area :description, 
                  class: 'form-control', 
                  placeholder: 'Tell the story behind this photo...', 
                  maxlength: 400, 
                  rows: 6, 
                  required: true %>
              <div class="form-text">
                <i class="fas fa-info-circle me-1"></i>
                Maximum 400 characters
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to :back, class: 'btn btn-outline btn-secondary' do %>
                <i class="fas fa-arrow-left me-1"></i><span>Back</span>
              <% end %>
              
              <%= form.submit 'Upload Photo', class: 'btn btn-primary btn-lg px-2' do %>
                <i class="fas fa-upload me-2"></i>Upload Photo
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <%= javascript_include_tag 'application' %>
</body>
</html> 