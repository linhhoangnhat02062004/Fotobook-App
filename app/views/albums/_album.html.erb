<% albums.each do |album| %>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <%= image_tag album.thumbnail_url, class: 'img-fluid rounded-start', alt: album.title %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= album.title %></h5>
          <p class="card-text"><%= album.description %></p>
          <p class="card-text"><small class="text-muted">Posted by <%= album.user.name %> at <%= album.created_at.strftime("%B %d, %Y") %></small></p>
          <div class="d-flex justify-content-between">
            <span><%= album.likes_count %> Likes</span>
            <span><%= link_to 'View', album_path(album), class: 'btn btn-link' %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
