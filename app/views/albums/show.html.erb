<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <!-- Album Header -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h2 class="card-title"><%= @album.title %></h2>
              <p class="card-text text-muted"><%= @album.description %></p>
              <div class="d-flex align-items-center text-muted">
                <span class="me-3">
                  <i class="fas fa-user"></i> <%= @album.user.first_name %> <%= @album.user.last_name %>
                </span>
                <span class="me-3">
                  <i class="fas fa-calendar"></i> <%= @album.created_at.strftime("%B %d, %Y") %>
                </span>
                <span class="me-3">
                  <i class="fas fa-images"></i> <%= @album.photo_count %> photos
                </span>
                <span>
                  <% if @album.sharing_mode == 'private' %>
                    <i class="fas fa-lock"></i> Private
                  <% else %>
                    <i class="fas fa-globe"></i> Public
                  <% end %>
                </span>
              </div>
            </div>
            
            <% if current_user == @album.user %>
              <div class="btn-group">
                <%= link_to edit_album_path(@album), class: 'btn btn-outline-primary btn-sm' do %>
                  <i class="fas fa-edit"></i> Edit
                <% end %>
                <%= button_to album_path(@album), method: :delete, class: 'btn btn-outline-danger btn-sm', 
                    data: { confirm: 'Are you sure you want to delete this album?' } do %>
                  <i class="fas fa-trash"></i> Delete
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Photos Grid -->
      <% if @photos.any? %>
        <div class="row row-cols-2 row-cols-md-4 g-3">
          <% @photos.each do |photo| %>
            <div class="col">
              <div class="card border-0 shadow-sm">
                <% if photo.image.present? %>
                  <%= image_tag photo.image.url, class: 'card-img-top', alt: photo.title, 
                      style: 'height: 200px; object-fit: cover; cursor: pointer;', 
                      onclick: "viewPhoto(#{photo.id})" %>
                <% else %>
                  <%= image_tag 'logo_login.png', class: 'card-img-top', alt: 'Default Photo', 
                      style: 'height: 200px; object-fit: cover;' %>
                <% end %>
                <div class="card-body p-2">
                  <p class="card-text small text-muted mb-0"><%= photo.title %></p>
                  <% if photo.description.present? %>
                    <small class="text-muted"><%= photo.description.truncate(50) %></small>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-images fa-3x text-muted mb-3"></i>
          <h5 class="text-muted">No photos in this album</h5>
          <p class="text-muted">Add some photos to get started!</p>
          <% if current_user == @album.user %>
            <%= link_to edit_album_path(@album), class: 'btn btn-primary' do %>
              <i class="fas fa-plus"></i> Add Photos
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Photo Modal -->
<div class="modal fade" id="photoModal" tabindex="-1" aria-labelledby="photoModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="photoModalLabel">Photo Title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <img id="modalPhoto" src="" alt="Photo" class="img-fluid">
        <p id="modalDescription" class="mt-3 text-muted"></p>
      </div>
    </div>
  </div>
</div>

<script>
function viewPhoto(photoId) {
  // This would typically fetch photo details via AJAX
  // For now, we'll just show a placeholder
  document.getElementById('photoModalLabel').textContent = 'Photo ' + photoId;
  document.getElementById('modalPhoto').src = '/assets/logo_login.png';
  document.getElementById('modalDescription').textContent = 'Photo description goes here';
  
  const modal = new bootstrap.Modal(document.getElementById('photoModal'));
  modal.show();
}
</script> 