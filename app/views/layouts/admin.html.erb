<!DOCTYPE html>
<html lang="vi">
<head>
  <title>Admin - <%= content_for(:title) || "Fotobook" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  
  <!-- Facebook-style Font Stack -->
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet">

  <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body class="admin-body">
  <!-- Admin Navigation -->
  <nav class="admin-navbar">
    <div class="container-fluid">
      <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
          <!-- Mobile Menu Toggle -->
          <button class="btn btn-link d-lg-none me-3 sidebar-toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#adminSidebar">
            <i class="fas fa-bars"></i>
          </button>
          
          <div class="admin-brand">
            <i class="fas fa-shield-alt me-2"></i>
            <span class="d-none d-sm-inline">Fotobook Admin</span>
            <span class="d-sm-none">Admin</span>
          </div>
        </div>
        
        <div class="admin-nav">
          <div class="dropdown">
            <button class="btn btn-link dropdown-toggle admin-user-dropdown" type="button" 
                    data-bs-toggle="dropdown" 
                    aria-expanded="false">
              <i class="fas fa-user-circle me-2"></i>
              <%= current_user.full_name %>
              <span class="badge bg-danger ms-2">Admin</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><%= link_to 'Dashboard', admin_dashboard_path, class: 'dropdown-item' %></li>
              <li><%= link_to 'View Site', feeds_path, class: 'dropdown-item' %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item text-danger' %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="admin-container">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <div class="sidebar-header">
        <h5>Admin Panel</h5>
      </div>
      
      <nav class="sidebar-nav">
        <ul class="nav flex-column">
          <li class="nav-item mb-2">
            <%= link_to admin_dashboard_path, class: "nav-link #{current_page?(admin_dashboard_path) ? 'active' : ''}" do %>
              <i class="fas fa-tachometer-alt me-1" style="color: black;"></i>
              <span class = "side-bar-item"> Dashboard </span>
            <% end %>
          </li>
          
          <li class="nav-item mb-2">
            <%= link_to admin_users_path, class: "nav-link #{controller_name == 'admin' && action_name == 'users' ? 'active' : ''}" do %>
              <i class="fas fa-users me-1" style="color: black;"></i>
                <span class = "side-bar-item">Users</span>
            <% end %>
          </li>
          
          <li class="nav-item mb-2">
            <%= link_to admin_albums_path, class: "nav-link #{controller_name == 'admin' && action_name == 'albums' ? 'active' : ''}" do %>
              <i class="fas fa-images me-1" style="color: black;"></i>
              <span class="side-bar-item">Albums</span>
            <% end %>
          </li>
          
          <li class="nav-item">
            <%= link_to admin_photos_path, class: "nav-link #{controller_name == 'admin' && action_name == 'photos' ? 'active' : ''}" do %>
              <i class="fas fa-camera me-1" style="color: black;"></i>
              <span class="side-bar-item">Photos</span>
            <% end %>
          </li>
        </ul>
      </nav>
    </aside>

    <!-- Sidebar - Mobile (Offcanvas) -->
    <div class="offcanvas-lg offcanvas-start" tabindex="-1" id="adminSidebar">
      <div class="offcanvas-header d-lg-none">
        <h5 class="offcanvas-title">Admin Panel</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#adminSidebar"></button>
      </div>
      <div class="offcanvas-body p-0">
        <nav class="sidebar-nav">
          <ul class="nav flex-column">
            <li class="nav-item mb-2">
              <%= link_to admin_dashboard_path, class: "nav-link #{current_page?(admin_dashboard_path) ? 'active' : ''}", data: { bs_dismiss: "offcanvas" } do %>
                <i class="fas fa-tachometer-alt me-1" style="color: black;"></i>
                <span class="side-bar-item">Dashboard</span>
              <% end %>
            </li>
            
            <li class="nav-item mb-2">
              <%= link_to admin_users_path, class: "nav-link #{controller_name == 'admin' && action_name == 'users' ? 'active' : ''}", data: { bs_dismiss: "offcanvas" } do %>
                <i class="fas fa-users me-1" style="color: black;"></i>
                <span class="side-bar-item">Users</span>
              <% end %>
            </li>
            
            <li class="nav-item mb-2">
              <%= link_to admin_albums_path, class: "nav-link #{controller_name == 'admin' && action_name == 'albums' ? 'active' : ''}", data: { bs_dismiss: "offcanvas" } do %>
                <i class="fas fa-images me-1" style="color: black;"></i>
                <span class="side-bar-item">Albums</span>
              <% end %>
            </li>
            
            <li class="nav-item">
              <%= link_to admin_photos_path, class: "nav-link #{controller_name == 'admin' && action_name == 'photos' ? 'active' : ''}", data: { bs_dismiss: "offcanvas" } do %>
                <i class="fas fa-camera me-1" style="color: black;"></i>
                <span class="side-bar-item">Photos</span>
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <main class="admin-main">
      <div class="admin-content">
        <!-- Flash Messages -->
        <% if notice %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i><%= notice %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <% if alert %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i><%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </main>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 