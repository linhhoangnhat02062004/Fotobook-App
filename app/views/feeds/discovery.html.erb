<div class="container-fluid mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-xl-9">
      <!-- Discovery Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
          <i class="fas fa-compass me-2 text-primary"></i>Discover
        </h2>
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-outline-primary active" id="photos-tab" data-content="photos">
            <i class="fas fa-camera me-1"></i>Photos
          </button>
          <button type="button" class="btn btn-outline-primary" id="albums-tab" data-content="albums">
            <i class="fas fa-images me-1"></i>Albums
          </button>
        </div>
      </div>

      <!-- Photos Section -->
      <div id="photos-content" class="content-section">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
          <% @photos.each do |photo| %>
            <div class="col">
              <div class="card border-0 shadow-sm position-relative photo-card" data-photo-id="<%= photo.id %>">
                <% if photo.image.present? %>
                  <%= image_tag photo.image.url, class: 'card-img-top', alt: photo.title, style: 'height: 200px; object-fit: cover;' %>
                <% else %>
                  <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-image fa-3x text-muted"></i>
                  </div>
                <% end %>
                
                <!-- Privacy indicator -->
                <div class="position-absolute top-0 end-0 m-2">
                  <% if photo.sharing_mode == 'private' %>
                    <i class="fas fa-lock text-white bg-dark bg-opacity-50 rounded-circle p-1" style="font-size: 12px;"></i>
                  <% else %>
                    <i class="fas fa-globe text-white bg-dark bg-opacity-50 rounded-circle p-1" style="font-size: 12px;"></i>
                  <% end %>
                </div>

                <!-- Follow status indicator -->
                <% if user_signed_in? && current_user != photo.user %>
                  <div class="position-absolute top-0 start-0 m-2">
                    <% if current_user.following?(photo.user) %>
                      <span class="badge bg-success">
                        <i class="fas fa-user-check me-1"></i>Following
                      </span>
                    <% else %>
                      <span class="badge bg-secondary">
                        <i class="fas fa-user-plus me-1"></i>Not Following
                      </span>
                    <% end %>
                  </div>
                <% end %>
                
                <div class="card-body p-3">
                  <!-- Author info -->
                  <div class="d-flex align-items-center mb-2">
                    <div class="me-2">
                      <% if photo.user.avatar.present? %>
                        <%= image_tag photo.user.avatar.url, class: 'rounded-circle', width: 30, height: 30, style: 'object-fit: cover;' %>
                      <% else %>
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px; font-size: 12px;">
                          <%= photo.user.first_name.first.upcase %><%= photo.user.last_name.first.upcase %>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-grow-1">
                      <%= link_to user_path(photo.user), class: 'text-decoration-none' do %>
                        <small class="text-muted"><%= photo.user.first_name %> <%= photo.user.last_name %></small>
                      <% end %>
                    </div>
                    <% if user_signed_in? && current_user != photo.user %>
                      <div>
                        <% if current_user.following?(photo.user) %>
                          <%= button_to unfollow_user_path(photo.user), method: :delete, class: 'btn btn-outline-danger btn-sm' do %>
                            <i class="fas fa-user-minus"></i>
                          <% end %>
                        <% else %>
                          <%= button_to follow_user_path(photo.user), method: :post, class: 'btn btn-outline-primary btn-sm' do %>
                            <i class="fas fa-user-plus"></i>
                          <% end %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>

                  <!-- Photo title -->
                  <h6 class="card-title mb-1">
                    <%= link_to photo_path(photo), class: 'text-decoration-none text-dark' do %>
                      <%= photo.title %>
                    <% end %>
                  </h6>

                  <!-- Photo description -->
                  <% if photo.description.present? %>
                    <p class="card-text small text-muted mb-2"><%= truncate(photo.description, length: 100) %></p>
                  <% end %>

                  <!-- Publication date -->
                  <small class="text-muted">
                    <i class="fas fa-clock me-1"></i><%= time_ago_in_words(photo.created_at) %> ago
                  </small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @photos.empty? %>
            <div class="col-12">
              <div class="text-center py-5">
                <i class="fas fa-camera fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No public photos yet</h5>
                <p class="text-muted">Be the first to share your photos!</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Albums Section -->
      <div id="albums-content" class="content-section" style="display: none;">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
          <% @albums.each do |album| %>
            <div class="col">
              <div class="card border-0 shadow-sm position-relative album-card" data-album-id="<%= album.id %>">
                                 <% if album.photos.any? && album.photos.first.image.present? %>
                   <%= image_tag album.photos.first.image.url, class: 'card-img-top', alt: album.title, style: 'height: 200px; object-fit: cover;' %>
                 <% else %>
                   <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                     <i class="fas fa-images fa-3x text-muted"></i>
                   </div>
                 <% end %>
                
                <!-- Privacy indicator -->
                <div class="position-absolute top-0 end-0 m-2">
                  <% if album.sharing_mode == 'private' %>
                    <i class="fas fa-lock text-white bg-dark bg-opacity-50 rounded-circle p-1" style="font-size: 12px;"></i>
                  <% else %>
                    <i class="fas fa-globe text-white bg-dark bg-opacity-50 rounded-circle p-1" style="font-size: 12px;"></i>
                  <% end %>
                </div>

                <!-- Follow status indicator -->
                <% if user_signed_in? && current_user != album.user %>
                  <div class="position-absolute top-0 start-0 m-2">
                    <% if current_user.following?(album.user) %>
                      <span class="badge bg-success">
                        <i class="fas fa-user-check me-1"></i>Following
                      </span>
                    <% else %>
                      <span class="badge bg-secondary">
                        <i class="fas fa-user-plus me-1"></i>Not Following
                      </span>
                    <% end %>
                  </div>
                <% end %>

                                 <!-- Photo count overlay -->
                 <div class="position-absolute top-50 start-50 translate-middle text-center">
                   <div class="bg-white rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
                     <div>
                       <div class="fw-bold text-dark"><%= album.photos.count %></div>
                       <div class="small text-muted">PHOTOS</div>
                     </div>
                   </div>
                 </div>
                
                <div class="card-body p-3">
                  <!-- Author info -->
                  <div class="d-flex align-items-center mb-2">
                    <div class="me-2">
                      <% if album.user.avatar.present? %>
                        <%= image_tag album.user.avatar.url, class: 'rounded-circle', width: 30, height: 30, style: 'object-fit: cover;' %>
                      <% else %>
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px; font-size: 12px;">
                          <%= album.user.first_name.first.upcase %><%= album.user.last_name.first.upcase %>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-grow-1">
                      <%= link_to user_path(album.user), class: 'text-decoration-none' do %>
                        <small class="text-muted"><%= album.user.first_name %> <%= album.user.last_name %></small>
                      <% end %>
                    </div>
                    <% if user_signed_in? && current_user != album.user %>
                      <div>
                        <% if current_user.following?(album.user) %>
                          <%= button_to unfollow_user_path(album.user), method: :delete, class: 'btn btn-outline-danger btn-sm' do %>
                            <i class="fas fa-user-minus"></i>
                          <% end %>
                        <% else %>
                          <%= button_to follow_user_path(album.user), method: :post, class: 'btn btn-outline-primary btn-sm' do %>
                            <i class="fas fa-user-plus"></i>
                          <% end %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>

                  <!-- Album title -->
                  <h6 class="card-title mb-1">
                    <%= link_to album_path(album), class: 'text-decoration-none text-dark' do %>
                      <%= album.title %>
                    <% end %>
                  </h6>

                  <!-- Album description -->
                  <% if album.description.present? %>
                    <p class="card-text small text-muted mb-2"><%= truncate(album.description, length: 100) %></p>
                  <% end %>

                  <!-- Publication date -->
                  <small class="text-muted">
                    <i class="fas fa-clock me-1"></i><%= time_ago_in_words(album.created_at) %> ago
                  </small>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @albums.empty? %>
            <div class="col-12">
              <div class="text-center py-5">
                <i class="fas fa-images fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No public albums yet</h5>
                <p class="text-muted">Be the first to create an album!</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const photosTab = document.getElementById('photos-tab');
    const albumsTab = document.getElementById('albums-tab');
    const photosContent = document.getElementById('photos-content');
    const albumsContent = document.getElementById('albums-content');
    
    photosTab.addEventListener('click', function() {
      photosTab.classList.add('active');
      albumsTab.classList.remove('active');
      photosContent.style.display = 'block';
      albumsContent.style.display = 'none';
    });
    
    albumsTab.addEventListener('click', function() {
      albumsTab.classList.add('active');
      photosTab.classList.remove('active');
      albumsContent.style.display = 'block';
      photosContent.style.display = 'none';
    });

    // Album card click handlers
    document.querySelectorAll('.album-card').forEach(card => {
      card.addEventListener('click', function(e) {
        // Don't trigger if clicking on buttons or links
        if (e.target.closest('button') || e.target.closest('a')) {
          return;
        }
        
        const albumId = this.dataset.albumId;
        if (albumId) {
          window.location.href = '/albums/' + albumId;
        }
      });
    });

    // Photo card click handlers
    document.querySelectorAll('.photo-card').forEach(card => {
      card.addEventListener('click', function(e) {
        // Don't trigger if clicking on buttons or links
        if (e.target.closest('button') || e.target.closest('a')) {
          return;
        }
        
        const photoId = this.dataset.photoId;
        if (photoId) {
          window.location.href = '/photos/' + photoId;
        }
      });
    });
  });
</script> 