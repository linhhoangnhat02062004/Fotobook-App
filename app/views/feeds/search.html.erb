<!-- Search Results Page -->
<div class="container-fluid py-3">
  <div class="row">
    <!-- Main Content -->
    <div class="col-lg-7 mx-auto">
      <!-- Page Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="mt-3">
          <h2 class="fw-bold text-dark mb-1">
            <i class="fas fa-search text-dark"></i> <span class="text-dark" style="font-size: 18.5pt;">Search Results</span>
          </h2>
          <p class="text-muted mb-0" style="font-size: 10.5pt;">
            <% if params[:q].present? %>
              Results for "<%= params[:q] %>"
            <% else %>
              Enter a search term to find photos and albums
            <% end %>
          </p>
        </div>
        
        <!-- Tab Navigation -->
        <div class="btn-group" role="group" aria-label="Search tabs">
          <input type="radio" class="btn-check" name="searchType" id="search-photos" checked>
          <label class="btn btn-outline-primary" for="search-photos">
            <i class="fas fa-image custom-icons"></i> <span style="font-size: 10pt;">Photos (<%= @photos.count %>)</span>
          </label>
          
          <input type="radio" class="btn-check" name="searchType" id="search-albums">
          <label class="btn btn-outline-primary" for="search-albums">
            <i class="fas fa-images custom-icons"></i> <span style="font-size: 10pt;">Albums (<%= @albums.count %>)</span>
          </label>
        </div>
      </div>

      <!-- Photos Results -->
      <div id="searchPhotosContent" class="search-content">
        <% if @photos.any? %>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
            <% @photos.each do |photo| %>
              <div class="col">
                <div class="card border-0 shadow-sm position-relative photo-card" data-photo-id="<%= photo.id %>">
                  <% if photo.image.present? %>
                    <%= image_tag photo.image.url, class: 'card-img-top', alt: photo.title, style: 'height: 200px; object-fit: cover;' %>
                  <% else %>
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                      <i class="fas fa-image fa-3x text-muted"></i>
                    </div>
                  <% end %>
                  
                  <!-- Privacy indicator -->
                  <div class="position-absolute top-0 end-0 m-2">
                    <% if photo.sharing_mode == 'private' %>
                      <i class="fas fa-lock text-white bg-dark bg-opacity-50 rounded-circle p-1" style="font-size: 12px;"></i>
                    <% else %>
                      <i class="fas fa-globe text-white bg-dark bg-opacity-50 rounded-circle p-1" style="font-size: 12px;"></i>
                    <% end %>
                  </div>

                  <!-- Like status indicator -->
                  <% if user_signed_in? && current_user != photo.user %>
                    <div class="position-absolute top-0 start-0 m-2">
                      <% if current_user.liked?(photo) %>
                        <span class="badge bg-success">
                          <i class="fas fa-heart me-1"></i>Liked
                        </span>
                      <% else %>
                        <span class="badge bg-secondary">
                          <i class="fas fa-heart me-1"></i>Not Liked
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                  
                  <div class="card-body p-3">
                    <!-- Author info -->
                    <div class="d-flex align-items-center mb-2">
                      <div class="me-2">
                        <% if photo.user.avatar.present? %>
                          <%= image_tag photo.user.avatar.url, class: 'rounded-circle', width: 30, height: 30, style: 'object-fit: cover;' %>
                        <% else %>
                          <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px; font-size: 12px;">
                            <%= photo.user.first_name.first.upcase %><%= photo.user.last_name.first.upcase %>
                          </div>
                        <% end %>
                      </div>
                      <div class="flex-grow-1">
                        <%= link_to user_path(photo.user), class: 'text-decoration-none' do %>
                          <small class="text-muted"><%= photo.user.first_name %> <%= photo.user.last_name %></small>
                        <% end %>
                      </div>
                      <% if user_signed_in? && current_user != photo.user %>
                        <div>
                          <% if current_user.liked?(photo) %>
                            <%= button_to unlike_photo_path(photo), method: :delete, class: 'btn btn-outline-danger btn-sm' do %>
                              <i class="fas fa-heart"></i>
                            <% end %>
                          <% else %>
                            <%= button_to like_photo_path(photo), method: :post, class: 'btn btn-outline-primary btn-sm' do %>
                              <i class="fas fa-heart"></i>
                            <% end %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>

                    <!-- Photo title -->
                    <h6 class="card-title mb-1">
                      <%= link_to photo_path(photo), class: 'text-decoration-none text-dark' do %>
                        <%= photo.title %>
                      <% end %>
                    </h6>

                    <!-- Photo description -->
                    <% if photo.description.present? %>
                      <p class="card-text small text-muted mb-2"><%= truncate(photo.description, length: 100) %></p>
                    <% end %>

                    <!-- Publication date -->
                    <small class="text-muted">
                      <i class="fas fa-clock me-1"></i><%= time_ago_in_words(photo.created_at) %> ago
                    </small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-search fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No photos found</h5>
            <p class="text-muted">Try different keywords or browse all photos</p>
          </div>
        <% end %>
      </div>

      <!-- Albums Results -->
      <div id="searchAlbumsContent" class="search-content" style="display: none;">
        <% if @albums.any? %>
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
            <% @albums.each do |album| %>
              <div class="col">
                <div class="card border-0 shadow-sm position-relative album-card" data-album-id="<%= album.id %>">
                  <% if album.photos.any? && album.photos.first.image.present? %>
                    <%= image_tag album.photos.first.image.url, class: 'card-img-top', alt: album.title, style: 'height: 200px; object-fit: cover;' %>
                  <% else %>
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                      <i class="fas fa-images fa-3x text-muted"></i>
                    </div>
                  <% end %>
                  
                  <!-- Privacy indicator -->
                  <div class="position-absolute top-0 end-0 m-2">
                    <% if album.sharing_mode == 'private' %>
                      <i class="fas fa-lock text-white bg-dark bg-opacity-50 rounded-circle p-1" style="font-size: 12px;"></i>
                    <% else %>
                      <i class="fas fa-globe text-white bg-dark bg-opacity-50 rounded-circle p-1" style="font-size: 12px;"></i>
                    <% end %>
                  </div>

                  <!-- Like status indicator -->
                  <% if user_signed_in? && current_user != album.user %>
                    <div class="position-absolute top-0 start-0 m-2">
                      <% if current_user.liked?(album) %>
                        <span class="badge bg-success">
                          <i class="fas fa-heart me-1"></i>Liked
                        </span>
                      <% else %>
                        <span class="badge bg-secondary">
                          <i class="fas fa-heart me-1"></i>Not Liked
                        </span>
                      <% end %>
                    </div>
                  <% end %>

                  <!-- Photo count overlay -->
                  <div class="position-absolute top-50 start-50 translate-middle text-center">
                    <div class="bg-white rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
                      <div>
                        <div class="fw-bold text-dark"><%= album.photos.count %></div>
                        <div class="small text-muted">PHOTOS</div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="card-body p-3">
                    <!-- Author info -->
                    <div class="d-flex align-items-center mb-2">
                      <div class="me-2">
                        <% if album.user.avatar.present? %>
                          <%= image_tag album.user.avatar.url, class: 'rounded-circle', width: 30, height: 30, style: 'object-fit: cover;' %>
                        <% else %>
                          <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px; font-size: 12px;">
                            <%= album.user.first_name.first.upcase %><%= album.user.last_name.first.upcase %>
                          </div>
                        <% end %>
                      </div>
                      <div class="flex-grow-1">
                        <%= link_to user_path(album.user), class: 'text-decoration-none' do %>
                          <small class="text-muted"><%= album.user.first_name %> <%= album.user.last_name %></small>
                        <% end %>
                      </div>
                      <% if user_signed_in? && current_user != album.user %>
                        <div>
                          <% if current_user.liked?(album) %>
                            <%= button_to unlike_album_path(album), method: :delete, class: 'btn btn-outline-danger btn-sm' do %>
                              <i class="fas fa-heart"></i>
                            <% end %>
                          <% else %>
                            <%= button_to like_album_path(album), method: :post, class: 'btn btn-outline-primary btn-sm' do %>
                              <i class="fas fa-heart"></i>
                            <% end %>
                          <% end %>
                        </div>
                      <% end %>
                    </div>

                    <!-- Album title -->
                    <h6 class="card-title mb-1">
                      <%= link_to album_path(album), class: 'text-decoration-none text-dark' do %>
                        <%= album.title %>
                      <% end %>
                    </h6>

                    <!-- Album description -->
                    <% if album.description.present? %>
                      <p class="card-text small text-muted mb-2"><%= truncate(album.description, length: 100) %></p>
                    <% end %>

                    <!-- Publication date -->
                    <small class="text-muted">
                      <i class="fas fa-clock me-1"></i><%= time_ago_in_words(album.created_at) %> ago
                    </small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-search fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No albums found</h5>
            <p class="text-muted">Try different keywords or browse all albums</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Tab switching
    const photosTab = document.getElementById('search-photos');
    const albumsTab = document.getElementById('search-albums');
    const photosContent = document.getElementById('searchPhotosContent');
    const albumsContent = document.getElementById('searchAlbumsContent');

    photosTab.addEventListener('change', function() {
      photosContent.style.display = 'block';
      albumsContent.style.display = 'none';
    });

    albumsTab.addEventListener('change', function() {
      albumsContent.style.display = 'block';
      photosContent.style.display = 'none';
    });

    // Card click handlers
    document.querySelectorAll('.photo-card').forEach(card => {
      card.addEventListener('click', function(e) {
        if (e.target.closest('button') || e.target.closest('a')) {
          return;
        }
        const photoId = this.dataset.photoId;
        if (photoId) {
          window.location.href = '/photos/' + photoId;
        }
      });
    });

    document.querySelectorAll('.album-card').forEach(card => {
      card.addEventListener('click', function(e) {
        if (e.target.closest('button') || e.target.closest('a')) {
          return;
        }
        const albumId = this.dataset.albumId;
        if (albumId) {
          window.location.href = '/albums/' + albumId;
        }
      });
    });
  });
</script> 