<% content_for :title, "Manage Photos" %>
<% content_for :layout, "admin" %>

<div class="row mb-3">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <h1 class="mb-0">Manage Photos</h1>
    <div class="flex-grow-1 ms-3">
      <form method="get" action="" class="w-100">
        <input type="text" name="q" class="form-control" placeholder="Search Photo / Album..." value="<%= params[:q] %>">
      </form>
    </div>
    <span class="admin-photo-count badge bg-primary ms-3"><%= @photos.total_count %> Photos</span>
  </div>
</div>

<div class="admin-card p-4">
  <% if @photos.any? %>
    <div class="row g-4">
      <% @photos.each do |photo| %>
        <div class="col-6 col-sm-4 col-md-3 col-lg-3">
          <div class="position-relative shadow-sm rounded overflow-hidden" style="background: #f8f9fa;">
            <% if photo.image.present? %>
              <%= image_tag photo.image.url, class: 'w-100', style: 'aspect-ratio: 1/1; object-fit: cover;' %>
            <% else %>
              <div class="d-flex align-items-center justify-content-center bg-light" style="width: 100%; aspect-ratio: 1/1; min-height: 120px;">
                <i class="fas fa-camera text-muted fa-2x"></i>
              </div>
            <% end %>
            <div class="position-absolute top-0 end-0 m-2">
              <%= link_to edit_photo_path(photo), class: 'btn btn-sm btn-light border shadow-sm', title: 'Edit Photo' do %>
                <i class="fas fa-pen"></i>
              <% end %>
            </div>
            <div class="position-absolute bottom-0 start-0 w-100 p-2" style="background: rgba(0,0,0,0.45);">
              <div class="text-white text-truncate" title="<%= photo.title %>"><%= photo.title %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @photos %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fas fa-camera fa-3x text-muted mb-3"></i>
      <h4>No Photos Found</h4>
      <p class="text-muted">There are no photos uploaded yet.</p>
    </div>
  <% end %>
</div> 