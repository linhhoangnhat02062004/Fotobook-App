<% content_for :title, "Manage Albums" %>
<% content_for :layout, "admin" %>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Manage Albums</h1>
      <div>
        <span class="badge bg-primary fs-7"><%= @albums.total_count %> Albums</span>
      </div>
    </div>
  </div>
</div>

<div class="admin-card">
  <div class="admin-card-header">
    <h5 class="admin-card-title">
      <i class="fas fa-images me-2"></i>All Albums
    </h5>
  </div>
  <div class="admin-card-body">
    <% if @albums.any? %>
      <div class="table-responsive">
        <table class="table admin-table">
          <thead>
            <tr>
              <th>Album</th>
              <th>Owner</th>
              <th>Sharing Mode</th>
              <th>Photos</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @albums.each do |album| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="me-3">
                      <% if album.cover_photo&.image.present? %>
                        <%= image_tag album.cover_photo.image.url, class: 'rounded', width: 50, height: 50, style: 'object-fit: cover;' %>
                      <% else %>
                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                          <i class="fas fa-images text-muted"></i>
                        </div>
                      <% end %>
                    </div>
                    <div>
                      <div class="fw-medium"><%= album.title %></div>
                      <small class="text-muted">
                        <%= truncate(album.description, length: 50) if album.description.present? %>
                      </small>
                    </div>
                  </div>
                </td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="me-2">
                      <% if album.user.avatar.present? %>
                        <%= image_tag album.user.avatar.url, class: 'rounded-circle', width: 30, height: 30 %>
                      <% else %>
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px; font-size: 0.8rem;">
                          <%= album.user.first_name.first.upcase %><%= album.user.last_name.first.upcase %>
                        </div>
                      <% end %>
                    </div>
                    <div>
                      <div class="fw-medium"><%= album.user.full_name %></div>
                      <small class="text-muted"><%= album.user.email %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="badge <%= album.sharing_mode == 'private' ? 'badge-warning' : 'badge-success' %>">
                    <%= album.sharing_mode.titleize %>
                  </span>
                </td>
                <td>
                  <span class="badge bg-info"><%= album.photos.count %></span>
                </td>
                <td>
                  <div><%= album.created_at.strftime("%b %d, %Y") %></div>
                  <small class="text-muted"><%= time_ago_in_words(album.created_at) %> ago</small>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to admin_album_path(album), class: 'btn btn-sm btn-outline-primary' do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    
                    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                      <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                      <li>
                        <%= link_to 'View Album', album_path(album), class: 'dropdown-item' %>
                      </li>
                      <li>
                        <%= link_to 'Edit Album', '#', class: 'dropdown-item', data: { bs_toggle: 'modal', bs_target: '#editAlbumModal' } %>
                      </li>
                      <li><hr class="dropdown-divider"></li>
                      <% if album.sharing_mode == 'private' %>
                        <li>
                          <%= button_to 'Make Public', '#', method: :patch, class: 'dropdown-item text-success' %>
                        </li>
                      <% else %>
                        <li>
                          <%= button_to 'Make Private', '#', method: :patch, class: 'dropdown-item text-warning' %>
                        </li>
                      <% end %>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <%= button_to 'Delete Album', admin_destroy_album_path(album), method: :delete, 
                            class: 'dropdown-item text-danger',
                            data: { confirm: 'Are you sure? This will delete all photos in the album.' } %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @albums %>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-images fa-3x text-muted mb-3"></i>
        <h4>No Albums Found</h4>
        <p class="text-muted">There are no albums created yet.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Edit Album Modal -->
<div class="modal fade" id="editAlbumModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Album</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" value="">
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" rows="3"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Sharing Mode</label>
            <select class="form-select">
              <option value="public">Public</option>
              <option value="private">Private</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Save Changes</button>
      </div>
    </div>
  </div>
</div> 