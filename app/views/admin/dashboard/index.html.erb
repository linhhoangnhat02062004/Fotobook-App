<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Fotobook</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Navigation -->
  <%= render 'shared/navigation' %>

  <div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <h1 class="mb-4">
          <i class="fas fa-cog me-2"></i> <span class="fw-bold fs-3">Admin Dashboard </span>
        </h1>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card bg-primary text-white">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <div>
                <h4 class="card-title"><%= @total_users %></h4>
                <p class="card-text">Total Users</p>
              </div>
              <div class="align-self-center">
                <i class="fas fa-users fa-2x"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card bg-success text-white">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <div>
                <h4 class="card-title"><%= @total_photos %></h4>
                <p class="card-text">Total Photos</p>
              </div>
              <div class="align-self-center">
                <i class="fas fa-camera fa-2x"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card bg-info text-white">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <div>
                <h4 class="card-title"><%= @total_albums %></h4>
                <p class="card-text">Total Albums</p>
              </div>
              <div class="align-self-center">
                <i class="fas fa-images fa-2x"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-users me-2"></i>Recent Users</h5>
          </div>
          <div class="card-body">
            <% @recent_users.each do |user| %>
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-user-circle me-2"></i>
                <div>
                  <strong><%= user.first_name %> <%= user.last_name %></strong>
                  <br>
                  <small class="text-muted"><%= user.email %></small>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-camera me-2"></i>Recent Photos</h5>
          </div>
          <div class="card-body">
            <% @recent_photos.each do |photo| %>
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-image me-2"></i>
                <div>
                  <strong><%= photo.title %></strong>
                  <br>
                  <small class="text-muted">by <%= photo.user.first_name %></small>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-images me-2"></i>Recent Albums</h5>
          </div>
          <div class="card-body">
            <% @recent_albums.each do |album| %>
              <div class="d-flex align-items-center mb-2">
                <i class="fas fa-folder me-2"></i>
                <div>
                  <strong><%= album.title %></strong>
                  <br>
                  <small class="text-muted">by <%= album.user.first_name %></small>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Admin Actions -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-tools me-2"></i>Admin Actions</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-3">
                <a href="/admin/users" class="btn btn-outline-primary w-100 mb-2">
                  <i class="fas fa-users me-2"></i>Manage Users
                </a>
              </div>
              <div class="col-md-3">
                <a href="/admin/photos" class="btn btn-outline-success w-100 mb-2">
                  <i class="fas fa-camera me-2"></i>Manage Photos
                </a>
              </div>
              <div class="col-md-3">
                <a href="/admin/albums" class="btn btn-outline-info w-100 mb-2">
                  <i class="fas fa-images me-2"></i>Manage Albums
                </a>
              </div>
              <div class="col-md-3">
                <a href="/feeds" class="btn btn-outline-secondary w-100 mb-2">
                  <i class="fas fa-home me-2"></i>Back to Feeds
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 