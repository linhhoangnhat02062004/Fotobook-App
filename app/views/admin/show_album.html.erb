<% content_for :title, "Album Details - #{@album.title}" %>
<% content_for :layout, "admin" %>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1>Album Details</h1>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to 'Admin', admin_dashboard_path %></li>
            <li class="breadcrumb-item"><%= link_to 'Albums', admin_albums_path %></li>
            <li class="breadcrumb-item active"><%= @album.title %></li>
          </ol>
        </nav>
      </div>
      <div>
        <%= link_to admin_albums_path, class: 'btn btn-outline-secondary me-2' do %>
          <i class="fas fa-arrow-left me-2"></i>Back to Albums
        <% end %>
        <%= link_to album_path(@album), class: 'btn btn-primary' do %>
          <i class="fas fa-external-link-alt me-2"></i>View Public Album
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Album Info Card -->
<div class="row mb-4">
  <div class="col-md-4">
    <div class="admin-card">
      <div class="admin-card-header">
        <h5 class="admin-card-title">
          <i class="fas fa-images me-2"></i>Album Information
        </h5>
      </div>
      <div class="admin-card-body text-center">
        <div class="mb-3">
                          <% if @album.photos.any? && @album.photos.first.image.present? %>
                  <%= image_tag @album.photos.first.image.url, class: 'img-fluid rounded', style: 'max-width: 200px;' %>
          <% else %>
            <div class="bg-light rounded d-flex align-items-center justify-content-center mx-auto" style="width: 200px; height: 150px;">
              <i class="fas fa-images fa-3x text-muted"></i>
            </div>
          <% end %>
        </div>
        
        <h4><%= @album.title %></h4>
        <% if @album.description.present? %>
          <p class="text-muted"><%= @album.description %></p>
        <% end %>
        
        <div class="row text-center mb-3">
          <div class="col-6">
            <div class="fw-bold fs-4"><%= @album.photos.count %></div>
            <small class="text-muted">Photos</small>
          </div>
          <div class="col-6">
            <div class="fw-bold fs-4"><%= @album.user.full_name %></div>
            <small class="text-muted">Owner</small>
          </div>
        </div>
        
        <div class="mb-3">
          <span class="badge <%= @album.sharing_mode == 'private' ? 'badge-warning' : 'badge-success' %> fs-6">
            <%= @album.sharing_mode.titleize %>
          </span>
        </div>
        
        <div class="text-muted">
          <small>
            <i class="fas fa-calendar me-1"></i>
            Created <%= @album.created_at.strftime("%B %d, %Y") %>
          </small>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-8">
    <div class="admin-card">
      <div class="admin-card-header">
        <h5 class="admin-card-title">
          <i class="fas fa-cog me-2"></i>Album Details
        </h5>
      </div>
      <div class="admin-card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Title</label>
              <div class="form-control-plaintext"><%= @album.title %></div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Sharing Mode</label>
              <div>
                <span class="badge <%= @album.sharing_mode == 'private' ? 'badge-warning' : 'badge-success' %>">
                  <%= @album.sharing_mode.titleize %>
                </span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mb-3">
          <label class="form-label fw-medium">Description</label>
          <div class="form-control-plaintext">
            <%= @album.description.present? ? @album.description : 'No description' %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Owner</label>
              <div class="d-flex align-items-center">
                <div class="me-2">
                  <% if @album.user.avatar.present? %>
                    <%= image_tag @album.user.avatar.url, class: 'rounded-circle', width: 30, height: 30 %>
                  <% else %>
                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px; font-size: 0.8rem;">
                      <%= @album.user.first_name.first.upcase %><%= @album.user.last_name.first.upcase %>
                    </div>
                  <% end %>
                </div>
                <div>
                  <div class="fw-medium"><%= @album.user.full_name %></div>
                  <small class="text-muted"><%= @album.user.email %></small>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Created</label>
              <div class="form-control-plaintext">
                <%= @album.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            </div>
          </div>
        </div>
        
        <hr>
        
        <div class="d-flex gap-2">
          <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editAlbumModal">
            <i class="fas fa-edit me-2"></i>Edit Album
          </button>
          <% if @album.sharing_mode == 'private' %>
            <button class="btn btn-outline-success">
              <i class="fas fa-globe me-2"></i>Make Public
            </button>
          <% else %>
            <button class="btn btn-outline-warning">
              <i class="fas fa-lock me-2"></i>Make Private
            </button>
          <% end %>
          <button class="btn btn-outline-danger ms-auto">
            <i class="fas fa-trash me-2"></i>Delete Album
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Album Photos -->
<div class="row">
  <div class="col-12">
    <div class="admin-card">
      <div class="admin-card-header d-flex justify-content-between align-items-center">
        <h5 class="admin-card-title">
          <i class="fas fa-camera me-2"></i>Photos in Album (<%= @album_photos.count %>)
        </h5>
      </div>
      <div class="admin-card-body">
        <% if @album_photos.any? %>
          <div class="row">
            <% @album_photos.each do |photo| %>
              <div class="col-md-3 col-sm-4 col-6 mb-4">
                <div class="position-relative">
                  <% if photo.image.present? %>
                    <%= image_tag photo.image.url, class: 'img-fluid rounded', style: 'width: 100%; height: 200px; object-fit: cover;' %>
                  <% else %>
                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 100%; height: 200px;">
                      <i class="fas fa-camera fa-2x text-muted"></i>
                    </div>
                  <% end %>
                  <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge <%= photo.sharing_mode == 'private' ? 'badge-warning' : 'badge-success' %>">
                  <%= photo.sharing_mode.titleize %>
                    </span>
                  </div>
                  <div class="position-absolute bottom-0 start-0 end-0 p-2 bg-dark bg-opacity-75 text-white">
                    <div class="fw-medium"><%= photo.title %></div>
                    <small><%= photo.user.full_name %></small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-camera fa-3x text-muted mb-3"></i>
            <h4>No Photos in Album</h4>
            <p class="text-muted">This album doesn't contain any photos yet.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Edit Album Modal -->
<div class="modal fade" id="editAlbumModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Album - <%= @album.title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with model: @album, url: admin_update_album_path(@album), method: :patch, local: true do |form| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= form.label :title, class: 'form-label' %>
            <%= form.text_field :title, class: 'form-control' %>
          </div>
          
          <div class="mb-3">
            <%= form.label :description, class: 'form-label' %>
            <%= form.text_area :description, class: 'form-control', rows: 3 %>
          </div>
          
          <div class="mb-3">
            <%= form.label :sharing_mode, class: 'form-label' %>
            <%= form.select :sharing_mode, 
                options_for_select([
                  ['Public', 'public'],
                  ['Private', 'private']
                ], @album.sharing_mode), 
                {}, { class: 'form-select' } %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= form.submit 'Save Changes', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div> 