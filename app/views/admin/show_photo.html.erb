<% content_for :title, "Photo Details - #{@photo.title}" %>
<% content_for :layout, "admin" %>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1>Photo Details</h1>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to 'Admin', admin_dashboard_path %></li>
            <li class="breadcrumb-item"><%= link_to 'Photos', admin_photos_path %></li>
            <li class="breadcrumb-item active"><%= @photo.title %></li>
          </ol>
        </nav>
      </div>
      <div>
        <%= link_to admin_photos_path, class: 'btn btn-outline-secondary me-2' do %>
          <i class="fas fa-arrow-left me-2"></i>Back to Photos
        <% end %>
        <%= link_to photo_path(@photo), class: 'btn btn-primary' do %>
          <i class="fas fa-external-link-alt me-2"></i>View Public Photo
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Photo Info Card -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="admin-card">
      <div class="admin-card-header">
        <h5 class="admin-card-title">
          <i class="fas fa-camera me-2"></i>Photo Information
        </h5>
      </div>
      <div class="admin-card-body text-center">
        <div class="mb-3">
          <% if @photo.image.present? %>
            <%= image_tag @photo.image.url, class: 'img-fluid rounded', style: 'max-width: 100%; max-height: 400px;' %>
          <% else %>
            <div class="bg-light rounded d-flex align-items-center justify-content-center mx-auto" style="width: 300px; height: 300px;">
              <i class="fas fa-camera fa-3x text-muted"></i>
            </div>
          <% end %>
        </div>
        
        <h4><%= @photo.title %></h4>
        <% if @photo.description.present? %>
          <p class="text-muted"><%= @photo.description %></p>
        <% end %>
        
        <div class="mb-3">
                          <span class="badge <%= @photo.sharing_mode == 'private' ? 'badge-warning' : 'badge-success' %> fs-6">
                  <%= @photo.sharing_mode.titleize %>
          </span>
        </div>
        
        <div class="text-muted">
          <small>
            <i class="fas fa-calendar me-1"></i>
            Uploaded <%= @photo.created_at.strftime("%B %d, %Y") %>
          </small>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="admin-card">
      <div class="admin-card-header">
        <h5 class="admin-card-title">
          <i class="fas fa-cog me-2"></i>Photo Details
        </h5>
      </div>
      <div class="admin-card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Title</label>
              <div class="form-control-plaintext"><%= @photo.title %></div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Visibility</label>
              <div>
                <span class="badge <%= @photo.sharing_mode == 'private' ? 'badge-warning' : 'badge-success' %>">
                  <%= @photo.sharing_mode.titleize %>
                </span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mb-3">
          <label class="form-label fw-medium">Description</label>
          <div class="form-control-plaintext">
            <%= @photo.description.present? ? @photo.description : 'No description' %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Owner</label>
              <div class="d-flex align-items-center">
                <div class="me-2">
                  <% if @photo.user.avatar.present? %>
                    <%= image_tag @photo.user.avatar.url, class: 'rounded-circle', width: 30, height: 30 %>
                  <% else %>
                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 30px; height: 30px; font-size: 0.8rem;">
                      <%= @photo.user.first_name.first.upcase %><%= @photo.user.last_name.first.upcase %>
                    </div>
                  <% end %>
                </div>
                <div>
                  <div class="fw-medium"><%= @photo.user.full_name %></div>
                  <small class="text-muted"><%= @photo.user.email %></small>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Album</label>
              <div class="form-control-plaintext">
                <% if @photo.album.present? %>
                  <%= @photo.album.title %>
                  <span class="badge <%= @photo.album.sharing_mode == 'private' ? 'badge-warning' : 'badge-success' %>">
                    <%= @photo.album.sharing_mode.titleize %>
                  </span>
                <% else %>
                  No Album
                <% end %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Uploaded</label>
              <div class="form-control-plaintext">
                <%= @photo.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label class="form-label fw-medium">Last Updated</label>
              <div class="form-control-plaintext">
                <%= @photo.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            </div>
          </div>
        </div>
        
        <hr>
        
        <div class="d-flex gap-2">
          <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editPhotoModal">
            <i class="fas fa-edit me-2"></i>Edit Photo
          </button>
          <% if @photo.sharing_mode == 'private' %>
            <button class="btn btn-outline-success">
              <i class="fas fa-globe me-2"></i>Make Public
            </button>
          <% else %>
            <button class="btn btn-outline-warning">
              <i class="fas fa-lock me-2"></i>Make Private
            </button>
          <% end %>
          <button class="btn btn-outline-danger ms-auto">
            <i class="fas fa-trash me-2"></i>Delete Photo
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit Photo Modal -->
<div class="modal fade" id="editPhotoModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Photo - <%= @photo.title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <%= form_with model: @photo, url: admin_update_photo_path(@photo), method: :patch, local: true do |form| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= form.label :title, class: 'form-label' %>
            <%= form.text_field :title, class: 'form-control' %>
          </div>
          
          <div class="mb-3">
            <%= form.label :description, class: 'form-label' %>
            <%= form.text_area :description, class: 'form-control', rows: 3 %>
          </div>
          
          <div class="mb-3">
            <%= form.label :sharing_mode, class: 'form-label' %>
            <%= form.select :sharing_mode, 
                options_for_select([
                  ['Public', 'public'],
                  ['Private', 'private']
                ], @photo.sharing_mode), 
                {}, { class: 'form-select' } %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= form.submit 'Save Changes', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div> 